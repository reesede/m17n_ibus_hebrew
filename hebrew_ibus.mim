   ("Q" 0x0597)		;; Revia
   ("E" 0x05b5)		;; Tsere
   ("Y" 0x059f)		;; Qar. Para
   ("O" 0x05ba)		;; Holom for Vav
   ("P" 0x05e3)		;; Final Pe
   ("\{" 0x007d)	;; Left Brace
